<div class="container mt-4">
    <h1>ðŸ“¦ Inventory</h1>
    
    <a href="/inventory-maker/add" class="btn btn-primary mb-3">+ Add Product</a>
    
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>SKU</th>
                    <th>Category</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if products|length > 0 %}
                    {% for p in products %}
                    <tr>
                        <td>{{ p.id }}</td>
                        <td><strong>{{ p.name }}</strong></td>
                        <td><code>{{ p.sku }}</code></td>
                        <td>{{ p.category }}</td>
                        <td>
                            <strong>{{ p.quantity }}</strong>
                            {% if p.quantity == 0 %}
                                <span class="badge bg-danger">Out</span>
                            {% elseif p.quantity < 5 %}
                                <span class="badge bg-warning">Low</span>
                            {% else %}
                                <span class="badge bg-success">OK</span>
                            {% endif %}
                        </td>
                        <td>{{ p.price }}</td>
                        <td>{{ p.product_type }}</td>
                        <td>
                            {% if p.synced_to_odoo %}
                                <span class="badge bg-success">âœ“ Synced</span>
                            {% else %}
                                <span class="badge bg-warning">âœ— Not Synced</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="/inventory-maker/edit/{{ p.id }}" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/inventory-maker/updatestock/{{ p.id }}" class="btn btn-sm btn-info">Stock</a>
                            <a href="/inventory-maker/delete/{{ p.id }}" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</a>
                        </td>
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted">No products found</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    
    {% if totalPages > 1 %}
    <nav>
        <ul class="pagination">
            {% if page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="/inventory-maker/list?page=1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/inventory-maker/list?page={{ page - 1 }}">Previous</a>
                </li>
            {% endif %}
            
            {% for p in 1..totalPages %}
                <li class="page-item {% if p == page %}active{% endif %}">
                    <a class="page-link" href="/inventory-maker/list?page={{ p }}">{{ p }}</a>
                </li>
            {% endfor %}
            
            {% if page < totalPages %}
                <li class="page-item">
                    <a class="page-link" href="/inventory-maker/list?page={{ page + 1 }}">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/inventory-maker/list?page={{ totalPages }}">Last</a>
                </li>
            {% endif %}
        </ul>
    </nav>
    {% endif %}
</div>
