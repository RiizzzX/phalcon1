<div class="container mt-4">

    <!-- Sync Status Bar -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Total Products:</strong> {{ syncStatus.total }}
                        </div>
                        <div class="col-md-3">
                            <strong style="color: green;">Synced:</strong> {{ syncStatus.synced }}
                        </div>
                        <div class="col-md-3">
                            <strong style="color: orange;">Unsynced:</strong> {{ syncStatus.unsynced }}
                        </div>
                        <div class="col-md-3">
                            <strong>Progress:</strong> {{ syncStatus.sync_percentage }}%
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar bg-success" style="width: {{ syncStatus.sync_percentage }}%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-3">
        <div class="col-md-12">
            <a href="/inventory/add" class="btn btn-primary">+ Add Product</a>
            <a href="/inventory/syncall" class="btn btn-info">⟳ Sync All Unsynced</a>
            <a href="/inventory/syncfromodoo" class="btn btn-warning">⇩ Pull from Odoo</a>
        </div>
    </div>

    <!-- Inventory Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>SKU</th>
                    <th>Type</th>
                    <th>Qty</th>
                    <th>Cost</th>
                    <th>Selling Price</th>
                    <th>Status</th>
                    <th>Odoo Sync</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if inventory|length > 0 %}
                {% for item in inventory %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td><strong>{{ item.name }}</strong></td>
                    <td><code>{{ item.sku }}</code></td>
                    <td>
                        <span class="badge bg-secondary">
                            {% if item.product_type == 'consu' %}
                                Consumable
                            {% elseif item.product_type == 'product' %}
                                Storable
                            {% elseif item.product_type == 'service' %}
                                Service
                            {% else %}
                                {{ item.product_type }}
                            {% endif %}
                        </span>
                    </td>
                    <td>
                        <strong style="font-size: 1.1em;">{{ item.quantity }}</strong>
                        {% if item.quantity == 0 %}
                            <span class="badge bg-danger">Out of Stock</span>
                        {% elseif item.quantity < 5 %}
                            <span class="badge bg-warning">Low Stock</span>
                        {% else %}
                            <span class="badge bg-success">In Stock</span>
                        {% endif %}
                    </td>
                    <td>Rp {{ item.cost_price|number_format(0, ',', '.') }}</td>
                    <td><strong>Rp {{ item.selling_price|number_format(0, ',', '.') }}</strong></td>
                    <td>
                        {% if item.status == 'available' %}
                            <span class="badge bg-success">Available</span>
                        {% elseif item.status == 'active' %}
                            <span class="badge bg-success">Active</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ item.status }}</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if item.synced_to_odoo %}
                            <span class="badge bg-success">✓ Synced</span>
                            <small class="d-block text-muted">{{ item.last_sync_at }}</small>
                        {% else %}
                            <span class="badge bg-warning">✗ Not Synced</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="/inventory/edit/{{ item.id }}" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/inventory/updatestock/{{ item.id }}" class="btn btn-sm btn-info">Stock</a>
                        {% if not item.synced_to_odoo %}
                            <a href="/inventory/synctoOdoo/{{ item.id }}" class="btn btn-sm btn-warning">Sync</a>
                        {% endif %}
                        <a href="/inventory/delete/{{ item.id }}" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</a>
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                    <td colspan="10" class="text-center text-muted">No products found</td>
                </tr>
                {% endif %}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    {% if totalPages > 1 %}
    <nav>
        <ul class="pagination">
            {% if page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="/inventory/list?page=1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/inventory/list?page={{ page - 1 }}">Previous</a>
                </li>
            {% endif %}

            {% for p in 1..totalPages %}
                <li class="page-item {% if p == page %}active{% endif %}">
                    <a class="page-link" href="/inventory/list?page={{ p }}">{{ p }}</a>
                </li>
            {% endfor %}

            {% if page < totalPages %}
                <li class="page-item">
                    <a class="page-link" href="/inventory/list?page={{ page + 1 }}">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/inventory/list?page={{ totalPages }}">Last</a>
                </li>
            {% endif %}
        </ul>
    </nav>
    {% endif %}
</div>

<style>
    .progress {
        height: 8px;
    }
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>
