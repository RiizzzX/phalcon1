    <script>
        const quantityInput = document.getElementById('quantityInput');
        const newStockPreview = document.getElementById('newStockPreview');
        
        function adjustStock(amount) {
            const currentValue = parseFloat(quantityInput.value) || 0;
            const newValue = Math.max(0, currentValue + amount);
            quantityInput.value = newValue;
            updatePreview();
        }
        
        function updatePreview() {
            const value = parseFloat(quantityInput.value) || 0;
            newStockPreview.textContent = value.toLocaleString('id-ID');
        }
        
        quantityInput.addEventListener('input', updatePreview);
    </script>
