            const div = document.createElement('div');
            div.className = 'po-line';
            div.style.border = '2px solid #ecf0f1';
            div.style.padding = '15px';
            div.style.borderRadius = '8px';
            div.style.marginBottom = '15px';
            div.innerHTML = `
                <div class="form-group">
                    <label for="lineProduct_${poLineIndex}">Produk *</label>
                    <select class="line-product" data-index="${poLineIndex}" required>
                        <option value="">-- Pilih Produk --</option>
                    </select>
                    <div style="margin-top:8px; color:#7f8c8d; font-size:13px;">Stok saat ini: <span class="stock-value">-</span></div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 15px;">
                    <div class="form-group">
                        <label for="lineQty_${poLineIndex}">Quantity *</label>
                        <input type="number" class="line-qty" data-index="${poLineIndex}" min="1" value="1" required>
                    </div>

                    <div class="form-group">
                        <label for="linePrice_${poLineIndex}">Harga per Unit *</label>
                        <input type="number" class="line-price" data-index="${poLineIndex}" min="0" step="0.01" value="0" required>
                    </div>

                    <div class="form-group" style="display: flex; align-items: flex-end;">
                        <button type="button" class="btn btn-danger btn-small" style="width: 100%; margin-bottom: 2px;" onclick="removePOLine(${poLineIndex})">Hapus</button>
                    </div>
                </div>
            `;
            container.insertBefore(div, container.lastElementChild);
            updateProductSelects([]);
            loadProducts();
        }

        // Remove PO Line
        function removePOLine(index) {
            const lines = document.querySelectorAll('.po-line');
            if (lines.length > 1) {
                const lineToRemove = document.querySelector(`.po-line [data-index="${index}"]`)?.closest('.po-line');
                if (lineToRemove) lineToRemove.remove();
            } else {
                showAlert('Minimal harus ada satu produk', 'warning');
            }
        }

        // Save PO
        function savePO() {
            const supplierId = document.getElementById('poSupplier').value;
            if (!supplierId) {
                showAlert('Pilih supplier terlebih dahulu', 'warning');
                return;
            }

            const lines = [];
            document.querySelectorAll('.po-line').forEach(line => {
                const productId = line.querySelector('.line-product').value;
                const qty = parseFloat(line.querySelector('.line-qty').value);
                const price = parseFloat(line.querySelector('.line-price').value);

                if (!productId || !qty || qty <= 0) {
                    throw new Error('Semua produk dan quantity harus valid');
                }

                // validate against available stock (if present)
                const opt = line.querySelector('.line-product').options[line.querySelector('.line-product').selectedIndex];
                const available = (opt && opt.dataset && opt.dataset.qty !== undefined) ? parseFloat(opt.dataset.qty) : null;
                if (available !== null && !isNaN(available) && qty > available) {
                    showAlert('Quantity untuk produk melebihi stok tersedia', 'danger');
                    throw new Error('Quantity exceeds available stock');
                }

                lines.push({
                    product_id: productId,
                    quantity: qty,
                    price: price
                });
            });

            if (lines.length === 0) {
                showAlert('Tambahkan minimal satu produk', 'warning');
                return;
            }

            const notes = document.getElementById('poNotes').value;

            safeFetchJson(`${API_URL}?action=create_purchase_order`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    partner_id: supplierId,
                    notes: notes,
                    lines: lines
                })
            })
            .then(data => {
                if (data && data.success) {
                    showAlert('Purchase Order berhasil dibuat!', 'success');
                    closeModal();
                    // If server returned the created order directly, prepend to table for instant feedback
                    if (data.order) {
                        // Normalize supplier_name if partner_id is provided as array
                        if (Array.isArray(data.order.partner_id)) {
                            data.order.supplier_name = data.order.partner_id[1];
                            data.order.supplier_id = data.order.partner_id[0];
                        }
                        // Ensure lines are readable (read returns order_line ids; leave as-is)
                        renderPOTable([data.order]);
                        // and also refresh full list async
                        setTimeout(loadPurchaseOrders, 1000);
                    } else {
                        loadPurchaseOrders();
                    }
                } else if (data && data.errorHtml) {
                    showAlertHtml('<strong>Server error saat membuat PO:</strong><br>' + data.errorHtml);
                } else {
                    showAlert('Error: ' + (data.error || 'Unknown'), 'danger');
                }
            })
            .catch(err => showAlert('Error: ' + err.message, 'danger'));
        }

        // View PO Details
        function viewPODetails(poId) {
            try {
                console.debug('viewPODetails called with', poId);
                // normalize id to integer if possible
                let idNum = parseInt(poId, 10);
                if (isNaN(idNum)) {
                    // try to strip non-numeric prefixes like local- or others
                    const m = ('' + poId).match(/(\d+)/);
                    idNum = m ? parseInt(m[1], 10) : null;
                }

                if (!idNum) {
                    showAlert('ID PO tidak valid: ' + poId, 'danger');
                    return;
                }

                safeFetchJson(`${API_URL}?action=get_purchase_order&id=${idNum}`)
                    .then(data => {
                        if (data && data.success) {
                            const po = data.data;
                            let html = `
                                <div style="margin-bottom: 20px;">
                                    <p><strong>No. PO:</strong> ${po.name}</p>
                                    <p><strong>Supplier:</strong> ${po.supplier_name || 'N/A'}</p>
                                    <p><strong>Tanggal:</strong> ${formatDate(po.date_order)}</p>
                                    <p><strong>Status:</strong> <span class="badge badge-${po.state}">${getStateLabel(po.state)}</span></p>
                                    <p><strong>Total:</strong> Rp ${formatCurrency(po.amount_total)}</p>
                                    <p><strong>Catatan:</strong> ${po.note || po.notes || '-'}</p>
                                </div>
                                
                                <h3 style="margin-top: 20px; margin-bottom: 15px;">Detail Produk</h3>
                                <table style="width: 100%; border-collapse: collapse;">
                                    <thead>
                                        <tr style="background: #f5f5f5;">
                                            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #ddd;">Produk</th>
                                            <th style="padding: 10px; text-align: right; border-bottom: 2px solid #ddd;">Qty</th>
                                            <th style="padding: 10px; text-align: right; border-bottom: 2px solid #ddd;">Harga</th>
                                            <th style="padding: 10px; text-align: right; border-bottom: 2px solid #ddd;">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                            `;

                            if (po.lines && po.lines.length > 0) {
                                po.lines.forEach(line => {
                                    const productName = Array.isArray(line.product_id) ? line.product_id[1] : line.name;
                                    html += `
                                        <tr style="border-bottom: 1px solid #ddd;">
                                            <td style="padding: 10px;">${productName}</td>
                                            <td style="padding: 10px; text-align: right;">${line.product_qty}</td>
                                            <td style="padding: 10px; text-align: right;">Rp ${formatCurrency(line.price_unit)}</td>
                                            <td style="padding: 10px; text-align: right;">Rp ${formatCurrency(line.price_subtotal)}</td>
                                        </tr>
                                    `;
                                });
                            }

                            html += `</tbody></table>`;

                            document.getElementById('detailContent').innerHTML = html;
                            document.getElementById('modalDetails').classList.add('show');
                        } else if (data && data.errorHtml) {
                            showAlertHtml('<strong>Server error saat memuat detail PO:</strong><br>' + data.errorHtml);
                        } else {
                            showAlert('Gagal memuat detail PO: ' + (data.error || 'Unknown'), 'danger');
                        }
                    })
                    .catch(err => showAlert('Error: ' + err.message, 'danger'));
            } catch (err) {
                console.error('viewPODetails error:', err);
                showAlert('Terjadi kesalahan saat membuka detail PO', 'danger');
            }
        }

        // Confirm Action
        function confirmAction(action, poId, message) {
            currentAction = action;
            currentPOId = poId;
            document.getElementById('confirmTitle').textContent = 'Konfirmasi Aksi';
            document.getElementById('confirmMessage').textContent = message;
            document.getElementById('modalConfirm').classList.add('show');
        }

        // Execute Confirm Action
        function executeConfirmAction() {
            closeConfirmModal();

            let apiAction = '';
            if (currentAction === 'approve') apiAction = 'approve_purchase_order';
            else if (currentAction === 'reject') apiAction = 'reject_purchase_order';
            else if (currentAction === 'delete') apiAction = 'delete_purchase_order';

            if (!apiAction) return;

            const btn = document.getElementById('btnConfirmYes');
            if (btn) {
                btn.disabled = true;
                btn.dataset.orig = btn.innerHTML;
                btn.innerHTML = '<span class="spinner" style="width: 12px; height: 12px;"></span> Memproses...';
            }

            fetch(`${API_URL}?action=${apiAction}&id=${currentPOId}`)
                .then(r => r.json())
                .then(data => {
                    if (btn) {
                        btn.disabled = false;
                        btn.innerHTML = btn.dataset.orig || 'Ya, Lanjutkan';
                    }

                    if (data.success) {
                        const messages = {
                            'approve': 'Purchase Order berhasil disetujui!',
                            'reject': 'Purchase Order berhasil ditolak!',
                            'delete': 'Purchase Order berhasil dihapus!'
                        };
                        showAlert(messages[currentAction] || 'Sukses', 'success');
                        loadPurchaseOrders();
                    } else {
                        showAlert('Error: ' + data.error, 'danger');
                    }
                })
                .catch(err => {
                    if (btn) {
                        btn.disabled = false;
                        btn.innerHTML = btn.dataset.orig || 'Ya, Lanjutkan';
                    }
                    showAlert('Error: ' + err.message, 'danger');
                });
        }

        // Modal Functions
        function openNewPOModal() {
            document.getElementById('modalTitle').textContent = 'Buat Purchase Order Baru';
            document.getElementById('formPO').reset();
            document.getElementById('poNotes').value = '';
            const lines = document.querySelectorAll('.po-line');
            lines.forEach((line, idx) => {
                if (idx > 0) line.remove();
            });
            document.getElementById('modalPO').classList.add('show');
        }

        function closeModal() {
            document.getElementById('modalPO').classList.remove('show');
        }

        function closeDetailsModal() {
            document.getElementById('modalDetails').classList.remove('show');
        }

        function closeConfirmModal() {
            document.getElementById('modalConfirm').classList.remove('show');
        }

        // UI Helpers
        function showLoading(show) {
            document.getElementById('loading').style.display = show ? 'block' : 'none';
            document.getElementById('tableContainer').style.display = show ? 'none' : 'block';
            document.getElementById('emptyState').style.display = 'none';
        }

        function showAlert(message, type = 'info') {
            const container = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} show`;
            alert.textContent = message;
            container.appendChild(alert);

            setTimeout(() => {
                alert.remove();
            }, 5000);
        }

        function formatDate(dateString) {
            return new Date(dateString).toLocaleDateString('id-ID', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
        }

        function formatCurrency(value) {
            return parseFloat(value).toLocaleString('id-ID', {
                minimumFractionDigits: 0,
                maximumFractionDigits: 2
            });
        }
    </script>
