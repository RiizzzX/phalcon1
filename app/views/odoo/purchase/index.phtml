        // Safe fetch helper: always return JSON when possible, otherwise return object with errorHtml
        function safeFetchJson(url, opts) {
            return fetch(url, opts).then(async r => {
                const text = await r.text();
                try {
                    return JSON.parse(text);
                } catch (e) {
                    return { success: false, errorHtml: text, status: r.status, statusText: r.statusText };
                }
            });
        }

        // Show HTML error response in UI (dismissible)
        function showAlertHtml(html, type = 'danger') {
            const container = document.getElementById('alertContainer');
            const wrapper = document.createElement('div');
            wrapper.className = `alert alert-${type} show`;
            wrapper.innerHTML = html;
            // add a small close button
            const closeBtn = document.createElement('button');
            closeBtn.className = 'btn btn-small';
            closeBtn.style.marginLeft = '8px';
            closeBtn.style.background = '#fff';
            closeBtn.style.border = '1px solid #ddd';
            closeBtn.textContent = 'Tutup';
            closeBtn.addEventListener('click', () => wrapper.remove());
            wrapper.appendChild(closeBtn);
            container.appendChild(wrapper);
            setTimeout(() => { try { wrapper.remove(); } catch(e) {} }, 10000);
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadPurchaseOrders();
            loadSuppliers();
            loadProducts();
            setupEventListeners();
        });

        // Event Listeners
        function setupEventListeners() {
            document.getElementById('btnNewPO').addEventListener('click', openNewPOModal);
            const addSupplierBtn = document.getElementById('btnAddSupplier');
            if (addSupplierBtn) addSupplierBtn.addEventListener('click', function() { if (typeof showSupplierModal === 'function') showSupplierModal(); else document.querySelector('[data-open-supplier]')?.click(); });
            document.getElementById('btnRefresh').addEventListener('click', loadPurchaseOrders);
            document.getElementById('btnSavePO').addEventListener('click', savePO);
            document.getElementById('btnCloseModal').addEventListener('click', closeModal);
            document.getElementById('btnCloseDetails').addEventListener('click', closeDetailsModal);
            document.getElementById('btnConfirmYes').addEventListener('click', executeConfirmAction);
            document.getElementById('btnConfirmNo').addEventListener('click', closeConfirmModal);

            // Delegate action clicks (view, approve, reject, delete) to handle dynamic rows
            const tbody = document.getElementById('poTableBody');
            if (tbody) {
                tbody.addEventListener('click', function (ev) {
                    const btn = ev.target.closest && ev.target.closest('button');
                    if (!btn) return;

                    // View
                    if (btn.classList.contains('btn-view')) {
                        // Debugging & robust id extraction
                        let id = btn.dataset.id;
                        if (!id) {
                            // try parent <td> or <tr> data-id
                            const td = btn.closest('td');
                            id = td ? td.dataset.id : null;
                        }
                        if (!id) {
                            const tr = btn.closest('tr');
                            id = tr ? tr.dataset.id : null;
                        }

                        console.debug('btn-view clicked, extracted id=', id, 'button:', btn);

                        if (id) {
                            // normalize numeric string
                            id = id.toString();
                            viewPODetails(id);
                        } else {
                            showAlert('Gagal membuka detail: ID PO tidak ditemukan', 'danger');
                        }
                        return;
                    }

                    // Actions with data-action (approve/reject/delete)
                    const action = btn.dataset.action;
                    const id = btn.dataset.id;
                    if (action && id) {
                        const messages = {
                            'approve': 'Setujui PO ini?',
                            'reject': 'Tolak PO ini?',
                            'delete': 'Hapus PO ini secara permanen?'
                        };
                        confirmAction(action, id, messages[action] || 'Konfirmasi?');
                    }
                });
            }
        }

        // Load Purchase Orders
        function loadPurchaseOrders() {
            showLoading(true);
            safeFetchJson(`${API_URL}?action=list_purchase_orders`)
                .then(data => {
                    if (data && data.success) {
                        renderPOTable(data.data);
                        showLoading(false);
                    } else if (data && data.errorHtml) {
                        // Show raw HTML for debugging
                        showAlertHtml('<strong>Server error saat memuat PO:</strong><br>' + data.errorHtml);
                        showLoading(false);
                    } else {
                        showAlert('Gagal memuat data', 'danger');
                        showLoading(false);
                    }
                })
                .catch(err => {
                    showAlert('Error: ' + err.message, 'danger');
                    showLoading(false);
                });
        }

        // Render PO Table
        function renderPOTable(orders) {
            const tbody = document.getElementById('poTableBody');
            const tableContainer = document.getElementById('tableContainer');
            const emptyState = document.getElementById('emptyState');

            if (!orders || orders.length === 0) {
                tableContainer.style.display = 'none';
                emptyState.style.display = 'block';
                return;
            }

            tbody.innerHTML = '';
            orders.forEach(order => {
                const badge = `<span class="badge badge-${order.state}">${getStateLabel(order.state)}</span>`;
                const row = document.createElement('tr');
                // Build action buttons using data attributes so we can use event delegation
                const actionsHtml = `
                    <button class="btn btn-primary btn-small btn-view" data-id="${order.id}">üëÅ Lihat</button>
                    ${getActionButtons(order.id, order.state)}
                `;

                row.innerHTML = `
                    <td><strong>${order.name}</strong></td>
                    <td>${order.supplier_name || 'N/A'}</td>
                    <td>${formatDate(order.date_order)}</td>
                    <td>Rp ${formatCurrency(order.amount_total)}</td>
                    <td>${badge}</td>
                    <td>${actionsHtml}</td>
                `;
                tbody.appendChild(row);
            });

            tableContainer.style.display = 'block';
            emptyState.style.display = 'none';
        }

        // Get Action Buttons based on State
        function getActionButtons(poId, state) {
            let buttons = '';
            
            // Approve/Reject only for draft or sent
            if (state === 'draft' || state === 'sent') {
                buttons += `<button class="btn btn-success btn-small" data-action="approve" data-id="${poId}">‚úÖ Setujui</button>`;
                buttons += `<button class="btn btn-danger btn-small" data-action="reject" data-id="${poId}">‚ùå Tolak</button>`;
            }
            
            // Allow delete for any state except 'done'
            if (state !== 'done') {
                buttons += `<button class="btn btn-danger btn-small" data-action="delete" data-id="${poId}">üóë Hapus</button>`;
            }
            
            return buttons;
        }

        // Get State Label
        function getStateLabel(state) {
            const labels = {
                'draft': 'üìù Draft',
                'sent': 'üì§ Dikirim',
                'purchase': '‚úÖ Disetujui',
                'done': '‚úîÔ∏è Selesai',
                'cancel': '‚ùå Dibatalkan'
            };
            return labels[state] || state;
        }

        // Load Suppliers (prettified, deduped)
        function loadSuppliers() {
            safeFetchJson(`${API_URL}?action=list_suppliers`)
                .then(data => {
                    if (data && data.success) {
                        const select = document.getElementById('poSupplier');
                        select.innerHTML = '<option value="">-- Pilih Supplier --</option>';

                        // Dedupe by normalized name/email/phone
                        const seen = new Set();

                        // Prefer Odoo (numeric id) entries first
                        const sorted = data.data.slice().sort((a,b) => ((a.local?1:0) - (b.local?1:0)));

                        sorted.forEach(supplier => {
                            const name = supplier.name || '';
                            const email = supplier.email || '';
                            const phone = supplier.phone || '';
                            const key = (name + '|' + email + '|' + phone).toLowerCase().trim();
                            if (seen.has(key)) return; // skip duplicates
                            seen.add(key);

                            const option = document.createElement('option');
                            option.value = supplier.id;
                            option.textContent = `${name}${email? ' ‚Äî ' + email : ''}${phone? ' / ' + phone : ''}${supplier.local ? ' (lokal)' : ''}`;
                            option.dataset.email = email;
                            option.dataset.phone = phone;
                            if (supplier.local) option.dataset.local = '1';
                            select.appendChild(option);
                        });
                    } else if (data && data.errorHtml) {
                        console.error('Error loading suppliers (HTML):', data.errorHtml);
                        showAlertHtml('<strong>Server error saat memuat suppliers:</strong><br>' + data.errorHtml);
                    }
                })
                .catch(err => console.error('Error loading suppliers:', err));
        }

        // Load Products (from local inventory API)
        function loadProducts() {
            safeFetchJson('/inventory-api/list')
                .then(resp => {
                    if (resp && resp.success) {
                        updateProductSelects(resp.data);
                    } else if (resp && resp.errorHtml) {
                        console.error('Inventory API returned HTML error');
                        showAlertHtml('<strong>Server error saat memuat produk:</strong><br>' + resp.errorHtml);
                    }
                })
                .catch(err => console.error('Error loading products:', err));
        }

        // Update Product Selects (show price & stock)
        function updateProductSelects(products) {
            const selects = document.querySelectorAll('.line-product');
            selects.forEach(select => {
                const currentValue = select.value;
                select.innerHTML = '<option value="">-- Pilih Produk --</option>';
                products.forEach(product => {
                    const price = (product.selling_price !== undefined) ? product.selling_price : ((product.price !== undefined) ? product.price : (product.list_price ?? 0));
                    const qty = (product.quantity !== undefined) ? product.quantity : (product.qty_available ?? 0);
                    const option = document.createElement('option');
                    option.value = product.id;
                    option.dataset.price = price;
                    option.dataset.qty = qty;
                    option.textContent = `${product.name} (Rp ${formatCurrency(price)}) ‚Äî Stok: ${qty}`;
                    select.appendChild(option);
                });
                if (currentValue) select.value = currentValue;
            });
        }

        // Auto-fill price & stock when product selection changes (delegated)
        document.addEventListener('change', function(e) {
            if (!e.target) return;
            const el = e.target;
            if (el.classList && el.classList.contains('line-product')) {
                const option = el.options[el.selectedIndex];
                const price = parseFloat(option.dataset.price) || 0;
                const qty = option.dataset.qty !== undefined ? option.dataset.qty : '-';
                const idx = el.dataset.index;
                const priceEl = document.querySelector(`.line-price[data-index="${idx}"]`);
                if (priceEl) priceEl.value = price;
                const stockSpan = el.closest('.po-line')?.querySelector('.stock-value');
                if (stockSpan) stockSpan.textContent = qty;
            }
        });

