<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Tree View -->
    <record id="view_equipment_tree" model="ir.ui.view">
        <field name="name">equipment.rental.tree</field>
        <field name="model">equipment.rental</field>
        <field name="arch" type="xml">
            <tree string="Equipment">
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="daily_rate"/>
                <field name="status" decoration-success="status=='available'" decoration-danger="status=='rented'"/>
                <field name="condition"/>
            </tree>
        </field>
    </record>

    <!-- Equipment Form View -->
    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">equipment.rental.form</field>
        <field name="model">equipment.rental</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <header>
                    <button name="action_set_maintenance" string="Set to Maintenance" type="object" class="btn-warning"/>
                    <button name="action_set_available" string="Set Available" type="object" class="btn-success"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="condition"/>
                        </group>
                        <group>
                            <field name="daily_rate"/>
                            <field name="purchase_price"/>
                            <field name="purchase_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Rental History">
                            <field name="rental_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="customer_name"/>
                                    <field name="rental_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Equipment Action -->
    <record id="action_equipment_rental" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">equipment.rental</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_equipment_rental_root" name="Equipment Rental" sequence="10"/>
    <menuitem id="menu_equipment" name="Equipment" parent="menu_equipment_rental_root" action="action_equipment_rental" sequence="10"/>
</odoo>
